@model IEnumerable<KhawLang.Models.Meal>

@{
    ViewData["Title"] = "Meal";
}

<h1>Meal</h1>

<tr>
    <td>
        <button type="button" class="btn btn-outline-primary"><a asp-action="Index">Back</a></button>
    </td>
    <td>
        <button type="button" class="btn btn-outline-primary"><a asp-action="Create">New Meal</a></button>
    </td>
    <td>
        <button type="button" class="btn btn-outline-primary"><a asp-action="IndexTag">Tag</a></button>
    </td>
</tr>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Amount</td>
                <td>@item.Description</td>
                <td>
                    <img src="@Url.Content(item.Image)" width="150px" height="150px" style="object-fit: cover; border-radius: 10px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MealId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.MealId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>