@model Meal
@{
    ViewData["Title"] = "Create";
}

@* for tag *@
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<!-- Bootstrap Tagsinput CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.css">
<!-- Bootstrap JS -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<!-- Bootstrap Tagsinput JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tagsinput/0.8.0/bootstrap-tagsinput.js"></script>
<style>
	.label-info
	{
		background-color: #666699;
		padding: 1px;
		border-radius: 4px;
	}
</style>

<h1 class="text-center">Create Meal</h1>
<td>
    <button type="button" class="btn btn-outline-primary"><a asp-action="Index">back</a></button>
</td>
<form method="post" asp-controller="Meal" asp-action="Create">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="Text" asp-for="Name" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="int" asp-for="Price" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input type="int" asp-for="Amount" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        @* <label asp-for="Description"></label> *@
        @* <input type="Text" asp-for="Description" class="form-control"/> *@
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="text" asp-for="Image" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Tags</label><br />
         @if (ViewBag.Tags != null)
        {
            @foreach (var tag in ViewBag.Tags)
            {
                <label>
                    <input type="checkbox" name="selectedTags" value="@tag.TagId" />
                    @tag.Name
                </label>
            }
        }
        else {
            <span>No tags available</span><br>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
