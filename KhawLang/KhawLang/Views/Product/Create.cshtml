@model Product
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Product</h1>
<form method="post" asp-controller="Product" asp-action="Create">
    @* <div class="form-group">
        <label asp-for="ProductId"></label>
        <input type="int" asp-for="ProductId" class="form-control"/>
    </div> *@

    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="Text" asp-for="Name" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="int" asp-for="Price" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input type="int" asp-for="Amount" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="text" asp-for="Image" class="form-control"/>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>
